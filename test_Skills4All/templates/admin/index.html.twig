{% extends 'base.html.twig' %}

{% block title %}Test Skills4All - Admin{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
    <main>
        
        <div class="album py-5 bg-body-tertiary">
            {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
            {% endfor %}
            {% if Categorie_name is defined %}
            <div class="text-center">
                <h1>{{ Categorie_name }}</h1> 
            </div> 
            {% endif %}
            <div class="container mx-auto">
                <div class="row justify-content-between mb-3">
                    {% include "components/_Category.html.twig" with { Categories: Categories, url_admin: url_admin } only%}
                    <a role="button" href="/admin/ajout" class="btn btn-secondary w-auto align-self-end">Ajouter une voiture</a>
                </div>
                <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                    {% for Car in Cars %}
                        {% if Car.car is defined %}
                        <div class="col">
                            <div class="card shadow-sm">
                                <img src="https://img.freepik.com/vecteurs-libre/voiture-rouge-vintage-fond-blanc_1308-103394.jpg?w=2000" class="bd-placeholder-img card-img-top" width="100%" height="225"> 
                                <div>
                                    <p>
                                        Nom : {{ Car.car.name }}
                                    </p>
                                    <p>
                                        Nombre de portes : {{ Car.car.nbDoors }}
                                    </p>
                                    <p>
                                        Nombre de sièges : {{ Car.car.nbSeats }}
                                    </p>
                                    <p>
                                        Prix : {{ Car.car.cost }}
                                    </p>
                                </div>
                                <div class="row justify-content-around">
                                    <a href="/admin/update/{{ Car.car.id }}" class="btn btn-secondary col-4" role="button">Modifier</a>
                                    <a href="/admin/delete/{{ Car.car.id }}" class="btn btn-secondary col-4" role="button">Supprimer</a>
                                </div>
                            </div>
                        </div>
                        {% else %}
                        <div class="col">
                            <div class="card shadow-sm">
                                <img src="https://img.freepik.com/vecteurs-libre/voiture-rouge-vintage-fond-blanc_1308-103394.jpg?w=2000" class="bd-placeholder-img card-img-top" width="100%" height="225"> 
                                <div>
                                    <p>
                                        Nom : {{ Car.name }}
                                    </p>
                                    <p>
                                        Nombre de portes : {{ Car.nbDoors }}
                                    </p>
                                    <p>
                                        Nombre de sièges : {{ Car.nbSeats }}
                                    </p>
                                    <p>
                                        Prix : {{ Car.cost }}
                                    </p>
                                </div>
                                <div class="row justify-content-around">
                                    <a href="/admin/update/{{ Car.id }}" class="btn btn-secondary col-4" role="button">Modifier</a>
                                    <a href="/admin/delete/{{ Car.id }}" class="btn btn-secondary col-4" role="button">Supprimer</a>
                                </div>
                                
                            </div>
                        </div>
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
            <div class="pagination justify-content-center mt-3">
                {{ knp_pagination_render(Cars) }}
            </div>
        </div>
    </main>
{% endblock %}
